<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:id="@+id/city_serach_cv"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    app:strokeColor="@color/BabyBlue"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="@dimen/too_small_size"
        android:paddingRight="@dimen/normal_size">

        <ImageView
            android:id="@+id/city_pollution_level_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             />
        <TextView
            android:id="@+id/city_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/too_small_size"
            android:layout_marginBottom="@dimen/too_small_size"
            android:text="تهران" />

        <TextView
            android:id="@+id/pollution_rate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_name_txt"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_size"
            android:layout_marginBottom="@dimen/too_small_size"
            android:textSize="15sp"
            android:text="شاخص کیفیت هوا" />

        <TextView
            android:id="@+id/city_pollution_rate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_name_txt"
            android:layout_marginBottom="@dimen/too_small_size"
            android:layout_toLeftOf="@+id/pollution_rate_txt"
            android:textSize="15sp"
            android:text="33.3" />

        <TextView
            android:id="@+id/tp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pollution_rate_txt"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_size"
            android:textSize="12sp"
            android:text="دما" />

        <TextView
            android:id="@+id/city_tp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_pollution_rate_txt"
            android:layout_toLeftOf="@+id/tp_txt"
            android:textSize="12sp"
            android:text="33.3" />
        <TextView
            android:id="@+id/pr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp_txt"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_size"
            android:textSize="12sp"
            android:text="فشار" />

        <TextView
            android:id="@+id/city_pr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_tp_txt"
            android:layout_toLeftOf="@+id/tp_txt"
            android:textSize="12sp"
            android:text="33.3" />
        <TextView
            android:id="@+id/hu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_pollution_rate_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/small_size"
            android:textSize="12sp"
            android:text="رطوبت" />

        <TextView
            android:id="@+id/city_hu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_pollution_rate_txt"
            android:layout_toLeftOf="@+id/hu_txt"
            android:textSize="12sp"
            android:text="33.3" />
        <TextView
            android:id="@+id/wind_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hu_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/small_size"
            android:textSize="12sp"
            android:text="سرعت باد" />

        <TextView
            android:id="@+id/city_wind_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_hu_txt"
            android:layout_toLeftOf="@+id/hu_txt"
            android:textSize="12sp"
            android:text="33.3" />


    </RelativeLayout>


</android.support.design.card.MaterialCardView>
